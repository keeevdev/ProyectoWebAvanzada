@model ProyectoWeb.Models.CreateMenuItemViewModel

@{
    ViewData["Title"] = "Editar Ítem de Menú";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<form asp-action="Edit"
      asp-route-id="@(ViewContext.RouteData.Values["id"]!)"
      method="post"
      enctype="multipart/form-data">

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageFile" class="form-label">Cambiar Imagen</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    @* Si ya existe una imagen, la mostramos *@
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mb-3">
            <label class="form-label">Imagen Actual</label>
            <div>
                <img src="@Model.ImageUrl"
                     alt="Imagen actual"
                     class="img-thumbnail"
                     style="max-height:200px;" />
            </div>
        </div>
    }

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

