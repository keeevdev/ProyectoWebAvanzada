@model List<ProyectoWeb.Models.CategoryViewModel>

@{
    ViewData["Title"] = "Categorías";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Nueva Categoría</a>
</p>

<table class="table table-striped">
    <thead>
        <tr><th>Id</th><th>Nombre</th><th>Acciones</th></tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-primary">Editar</a>
                    <form asp-action="Delete" asp-route-id="@c.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('¿Eliminar esta categoría?');">
                            Eliminar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
