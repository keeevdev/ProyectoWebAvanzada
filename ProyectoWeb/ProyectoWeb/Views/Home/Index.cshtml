@model List<ProyectoWeb.Models.MenuItemViewModel>
@{
    ViewData["Title"] = "Inicio";
}
<h1 class="mb-4">Menú Disponible</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text text-muted">@item.Description</p>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <strong class="text-primary">@item.Price.ToString("C")</strong>
                    @if (User.IsInRole("usuario"))
                    {
                        <a asp-controller="Orders" asp-action="Create" class="btn btn-sm btn-success">
                            Pedir
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>
