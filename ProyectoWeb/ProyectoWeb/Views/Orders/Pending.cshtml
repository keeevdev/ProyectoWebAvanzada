@model List<ProyectoWeb.Models.PendingOrderViewModel>
<h1>Pedidos Pendientes</h1>
<table class="table">
    <thead><tr><th>ID</th><th>Mesa</th><th>Estado</th><th>Tiempo Est.</th><th>Acción</th></tr></thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Id</td>
                <td>@o.TableNumber</td>
                <td>@o.Status</td>
                <td>@(o.EstimatedTimeMinutes?.ToString() ?? "-")</td>
                <td><a asp-action="Details" asp-route-orderId="@o.Id" class="btn btn-sm btn-info">Ver</a></td>
            </tr>
        }
    </tbody>
</table>
