@model List<ProyectoWeb.Models.UserViewModel>
@{
    ViewData["Title"] = "Administrar Usuarios";
}

<h2>Usuarios</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Agregar Usuario</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@user.Id">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
